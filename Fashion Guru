import SwiftUI

struct DesignerGoods: Identifiable {
    let id = UUID()
    var name: String
    var description: String
    var image: UIImage?
}

struct Closet: Identifiable {
    let id = UUID()
    var name: String
    var designerGoods: [DesignerGoods]
}

struct UserProfile: Identifiable {
    let id = UUID()
    var name: String
    var closets: [Closet]
}

struct ContentView: View {
